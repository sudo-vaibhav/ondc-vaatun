{
  "name": "ondc-vaatun",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"pnpm dev:server\" \"pnpm dev:client\"",
    "d": "$npm_execpath dev",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:server": "pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "start": "pnpm --filter server start",
    "lint": "biome check --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "ngrok": "dotenv -e .env -- ngrok http --domain moved-starfish-rapid.ngrok-free.app 4822",
    "n": "$npm_execpath ngrok",
    "signoz:up": "docker compose -f docker-compose.signoz.yml up -d",
    "signoz:down": "docker compose -f docker-compose.signoz.yml down",
    "signoz:clean": "docker compose -f docker-compose.signoz.yml down -v",
    "signoz:logs": "docker compose -f docker-compose.signoz.yml logs -f",
    "test:e2e": "playwright test",
    "e2e": "$npm_execpath test:e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
